@using WebRole.Models
@model IEnumerable<WebRole.Models.Block>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<div>
    @using (Html.BeginForm())
    {
        <p>
            Find hash: @Html.TextBox("HashSub")<br />
            Relayer: @Html.TextBox("Relay")<br />
            <input type="submit" value="Filter" />
        </p>
    }
</div>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelayedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transactions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hash)
        </th>
    </tr>
    @foreach (Block item in Model)
    {
        <tr>
            <td>
                @item.Total.ToString("#,#.00 'BTC'")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelayedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transactions)
            </td>
            <td>
                @Html.ActionLink(item.Hash.Substring(0, 25) + "...", "Details", "Explore", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>

